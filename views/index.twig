{% extends 'base.twig' %}

{% block content %}
	<div class="container mx-auto">
		<div class="space-y-8">
			{% for post in posts %}
				{% include 'content.twig' with {
					post: post
				} %}
			{% endfor %}
		</div>

		{% if posts.found_posts > (posts|length) %}
			{% include 'pagination.twig' with { pagination: posts.pagination }  %}
		{% endif %}
	</div>
{% endblock %}
